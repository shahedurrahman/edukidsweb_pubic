            @* <p class="text-xl text-white/90 mb-6 max-w-2xl mx-auto">
                Excellence in Cambridge Education with Islamic Values
            </p> *@

            <!-- Breadcrumb -->
            <nav class="flex justify-center items-center gap-2 text-white/90">
