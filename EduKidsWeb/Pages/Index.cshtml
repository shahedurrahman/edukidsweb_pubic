            <!-- Content Section -->
            <div class="space-y-8 text-center lg:text-left">
                <!-- Subtitle -->
                @* <div class="flex items-center justify-center lg:justify-start gap-2">
                    <span class="icon-[tabler--school] text-orange-400 size-5"></span>
                    <span class="text-orange-400 font-medium text-sm lg:text-base tracking-wide">Welcome To EduKids International School</span>
                </div> *@

                <!-- Main Headline -->
                <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-gray-800 leading-tight">
                    Excellence in<br>
                    <span class="text-orange-400">Cambridge Education</span><br>
                    with Islamic Values
                </h1>

                <!-- Description -->
                <p class="text-gray-600 text-lg lg:text-xl leading-relaxed max-w-md mx-auto lg:mx-0">
                    Nurturing young minds through world-class Cambridge curriculum while building strong Islamic character and values for global success.
                </p>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
