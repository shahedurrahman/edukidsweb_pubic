            <span class="icon-[tabler--balloon] size-12 lg:size-16"></span>
        </div>

        <!-- Diamond -->
        <div class="absolute top-32 left-1/4 text-orange-400">
            <span class="icon-[tabler--diamond] size-8 lg:size-10"></span>
        </div>

