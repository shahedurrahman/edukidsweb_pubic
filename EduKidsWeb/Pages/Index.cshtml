            <span class="icon-[tabler--plane] size-10 lg:size-12"></span>
        </div>

        <!-- Bee -->
        <div class="absolute top-1/2 right-1/4 text-yellow-400">
            <span class="icon-[tabler--bug] size-8 lg:size-10"></span>
        </div>
