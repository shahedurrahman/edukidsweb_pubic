                                <stop offset="100%" style="stop-color:#FEF3C7;stop-opacity:1" />
                            </linearGradient>
                        </defs>

                        <!-- Sky background -->
                        <rect width="400" height="320" fill="url(#skyGrad)" />

                        <!-- School building -->
                        <rect x="50" y="180" width="300" height="120" fill="#F97316" rx="8" />
                        <rect x="60" y="190" width="280" height="100" fill="#FFFFFF" rx="4" />

                        <!-- School dome (Islamic architecture) -->
