                        <ellipse cx="200" cy="175" rx="50" ry="25" fill="#34D399" />

                        <!-- Minaret-style tower -->
                        <rect x="320" y="120" width="20" height="80" fill="#F97316" />
                        <ellipse cx="330" cy="120" rx="15" ry="10" fill="#10B981" />
                        <circle cx="330" cy="110" r="4" fill="#FCD34D" />

                        <!-- Windows -->
                        <rect x="80" y="210" width="25" height="30" fill="#BFDBFE" rx="2" />
                        <rect x="120" y="210" width="25" height="30" fill="#BFDBFE" rx="2" />
                        <rect x="160" y="210" width="25" height="30" fill="#BFDBFE" rx="2" />
                        <rect x="255" y="210" width="25" height="30" fill="#BFDBFE" rx="2" />
                        <rect x="295" y="210" width="25" height="30" fill="#BFDBFE" rx="2" />

                        <!-- Main entrance -->
                        <rect x="185" y="220" width="30" height="50" fill="#8B5CF6" rx="15" />

                        <!-- Children figures -->
                        <!-- Child 1 -->
                        <circle cx="120" cy="280" r="8" fill="#FED7AA" />
                        <rect x="115" y="285" width="10" height="15" fill="#3B82F6" rx="2" />

                        <!-- Child 2 -->
                        <circle cx="150" cy="275" r="8" fill="#FED7AA" />
                        <rect x="145" y="280" width="10" height="15" fill="#EC4899" rx="2" />

                        <!-- Child 3 -->
                        <circle cx="180" cy="280" r="8" fill="#FED7AA" />
                        <rect x="175" y="285" width="10" height="15" fill="#10B981" rx="2" />

                        <!-- Child 4 -->
                        <circle cx="220" cy="280" r="8" fill="#FED7AA" />
                        <rect x="215" y="285" width="10" height="15" fill="#F59E0B" rx="2" />

                        <!-- Child 5 -->
                        <circle cx="250" cy="275" r="8" fill="#FED7AA" />
                        <rect x="245" y="280" width="10" height="15" fill="#8B5CF6" rx="2" />

                        <!-- Child 6 -->
                        <circle cx="280" cy="280" r="8" fill="#FED7AA" />
                        <rect x="275" y="285" width="10" height="15" fill="#EF4444" rx="2" />

                        <!-- Books floating around -->
                        <rect x="90" y="160" width="12" height="8" fill="#F59E0B" rx="1" transform="rotate(15 96 164)" />
                        <rect x="300" y="150" width="12" height="8" fill="#10B981" rx="1" transform="rotate(-20 306 154)" />
                        <rect x="130" y="140" width="12" height="8" fill="#3B82F6" rx="1" transform="rotate(25 136 144)" />

                        <!-- Stars in sky -->
                        <polygon points="100,50 103,59 112,59 105,65 108,74 100,68 92,74 95,65 88,59 97,59" fill="#FCD34D" />
                        <polygon points="320,60 322,66 328,66 323,70 325,76 320,72 315,76 317,70 312,66 318,66" fill="#FCD34D" />
                        <polygon points="60,80 62,86 68,86 63,90 65,96 60,92 55,96 57,90 52,86 58,86" fill="#FCD34D" />

                        <!-- Clouds -->
                        <ellipse cx="70" cy="70" rx="15" ry="8" fill="#FFFFFF" opacity="0.8" />
                        <ellipse cx="80" cy="65" rx="12" ry="6" fill="#FFFFFF" opacity="0.8" />
                        <ellipse cx="350" cy="90" rx="18" ry="10" fill="#FFFFFF" opacity="0.8" />
                        <ellipse cx="365" cy="85" rx="15" ry="8" fill="#FFFFFF" opacity="0.8" />

                        <!-- Islamic symbol (crescent) -->
                        <path d="M 200 60 A 15 15 0 1 0 200 90 A 10 10 0 1 1 200 60" fill="#10B981" />
                        <circle cx="210" cy="70" r="3" fill="#FCD34D" />

                        <!-- School name banner -->
                        <rect x="120" y="100" width="160" height="25" fill="#F97316" rx="12" />
                        <text x="200" y="118" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="#FFFFFF">EduKids International</text>

                        <!-- Cambridge text -->
                        <text x="200" y="305" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" font-weight="bold" fill="#6B7280">Cambridge Curriculum • Islamic Values</text>
                    </svg>

                    <!-- Overlay for better text contrast if needed -->
                    <div class="absolute inset-0 bg-gradient-to-t from-black/5 to-transparent rounded-3xl"></div>
                </div>

                <!-- Floating Elements around Image -->
                <div class="absolute -top-4 -right-4 w-20 h-20 bg-white rounded-2xl shadow-lg flex items-center justify-center">
                    <span class="icon-[tabler--book] text-orange-400 size-8"></span>
                </div>

                <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-white rounded-xl shadow-lg flex items-center justify-center">
                    <span class="icon-[tabler--palette] text-blue-400 size-6"></span>
                </div>

                <div class="absolute top-1/4 -left-6 w-12 h-12 bg-yellow-400 rounded-full flex items-center justify-center shadow-lg">
                    <span class="icon-[tabler--star] text-white size-6"></span>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="relative bg-gray-50 py-16 lg:py-24 overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute inset-0 pointer-events-none">
        <!-- Heart decoration -->
        <div class="absolute top-32 left-10 lg:left-20 text-orange-300">
            <span class="icon-[tabler--heart] size-16 lg:size-20 opacity-50"></span>
        </div>

        <!-- Bee decoration -->
        <div class="absolute top-20 right-10 lg:right-20 text-yellow-400">
            <span class="icon-[tabler--bug] size-12 lg:size-16"></span>
        </div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <div class="flex items-center justify-center gap-2 mb-4">
                <span class="icon-[tabler--quote] text-orange-400 size-5"></span>
                <span class="text-orange-400 font-medium text-sm lg:text-base tracking-wide">Testimonials</span>
            </div>

            <h2 class="text-3xl lg:text-4xl xl:text-5xl font-bold text-gray-800 leading-tight max-w-4xl mx-auto">
                What Parents Say About<br>
                EduKids International School
            </h2>
        </div>

        <!-- Testimonials Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">

            <!-- Testimonial 1 - Teal -->
            <div class="relative bg-teal-400 rounded-3xl p-8 text-white transform hover:scale-105 transition-transform duration-300">
                <!-- Quote Mark -->
                <div class="absolute top-6 right-6">
                    <span class="text-white/30 text-6xl font-bold">"</span>
                </div>

                <div class="relative z-10">
                    <p class="text-white/90 text-sm lg:text-base leading-relaxed mb-8">
                        "EduKids has transformed my child's education. The Cambridge curriculum combined with Islamic values creates a perfect learning environment. My daughter loves coming to school every day!"
                    </p>

                    <div class="flex items-center gap-3">
                        <div class="w-1 h-8 bg-white/50"></div>
                        <span class="font-semibold text-white">Fatima Rahman</span>
                    </div>
                </div>
            </div>

            <!-- Testimonial 2 - Orange -->
            <div class="relative bg-orange-400 rounded-3xl p-8 text-white transform hover:scale-105 transition-transform duration-300">
                <!-- Quote Mark -->
                <div class="absolute top-6 right-6">
                    <span class="text-white/30 text-6xl font-bold">"</span>
                </div>

                <div class="relative z-10">
                    <p class="text-white/90 text-sm lg:text-base leading-relaxed mb-8">
                        "The teachers at EduKids are exceptional. They provide personalized attention while maintaining high academic standards. Our son is excelling in both his studies and character development."
                    </p>

                    <div class="flex items-center gap-3">
                        <div class="w-1 h-8 bg-white/50"></div>
                        <span class="font-semibold text-white">Ahmed Khan</span>
                    </div>
                </div>
            </div>

            <!-- Testimonial 3 - Dark Blue -->
            <div class="relative bg-slate-600 rounded-3xl p-8 text-white transform hover:scale-105 transition-transform duration-300 md:col-span-2 lg:col-span-1">
                <!-- Quote Mark -->
                <div class="absolute top-6 right-6">
                    <span class="text-white/30 text-6xl font-bold">"</span>
                </div>

                <div class="relative z-10">
                    <p class="text-white/90 text-sm lg:text-base leading-relaxed mb-8">
                        "We chose EduKids for its unique approach to education. The international curriculum prepares our children for the global world while Islamic teachings keep them grounded in our values."
                    </p>

                    <div class="flex items-center gap-3">
                        <div class="w-1 h-8 bg-white/50"></div>
                        <span class="font-semibold text-white">Ayesha Begum</span>
                    </div>
                </div>
            </div>

        </div>

        <!-- Navigation Dots -->
        <div class="flex justify-center items-center gap-3">
            <div class="flex items-center gap-2">
                <button class="w-3 h-3 bg-orange-400 rounded-full transition-all duration-200"></button>
                <button class="w-2 h-2 bg-gray-300 rounded-full hover:bg-orange-400 transition-all duration-200"></button>
                <button class="w-2 h-2 bg-gray-300 rounded-full hover:bg-orange-400 transition-all duration-200"></button>
            </div>
        </div>
    </div>
</section>

