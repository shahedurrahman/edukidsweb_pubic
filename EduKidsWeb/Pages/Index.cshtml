@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Navigation Bar -->
<nav class="navbar bg-white shadow-sm border-b border-gray-100 w-full">
    <div class="w-full">
        <div class="mx-auto max-w-7xl px-4 py-3 sm:px-6 lg:px-8">
            <div class="flex w-full items-center justify-between">
                <!-- Logo Section -->
                <div class="navbar-start">
                    <a class="flex items-center gap-3 text-xl font-bold text-gray-800" href="@Url.Page("/Index")">
                        <div class="w-10 h-10 bg-orange-400 rounded-lg flex items-center justify-center">
                            <span class="icon-[tabler--school] text-white size-6"></span>
                        </div>
                        <span class="text-gray-800">EduKids</span>
                    </a>
                </div>

                <!-- Navigation Menu -->
                <div class="navbar-center hidden lg:flex">
                    <div class="flex items-center gap-8 text-base font-medium">
                        <a href="@Url.Page("/Index")" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 flex items-center gap-1">
                            Home
                            <span class="icon-[tabler--chevron-down] size-4"></span>
                        </a>
                        <a href="#about" class="text-gray-700 hover:text-orange-500 transition-colors duration-200">
                            About Us
                        </a>
                        <a href="#academics" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 flex items-center gap-1">
                            Academics
                            <span class="icon-[tabler--chevron-down] size-4"></span>
                        </a>
                        <a href="#admissions" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 flex items-center gap-1">
                            Admissions
                            <span class="icon-[tabler--chevron-down] size-4"></span>
                        </a>
                        <a href="#contact" class="text-gray-700 hover:text-orange-500 transition-colors duration-200">
                            Contact
                        </a>
                    </div>
                </div>

                <!-- Right Side Actions -->
                <div class="navbar-end flex items-center gap-4">
                    <!-- Call Us Section -->
                    <div class="hidden lg:flex items-center gap-3">
                        <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center">
                            <span class="icon-[tabler--phone] text-orange-500 size-5"></span>
                        </div>
                        <div class="text-sm">
                            <div class="text-gray-500 font-medium">Call Us Now</div>
                            <div class="text-gray-800 font-semibold">+1-555-123-4567</div>
                        </div>
                    </div>

                    <!-- Book A Visit Button -->
                    <button class="btn bg-orange-400 hover:bg-orange-500 text-white border-none px-6 py-2 rounded-full font-medium transition-colors duration-200 flex items-center gap-2">
                        Book A Visit
                        <span class="icon-[tabler--arrow-right] size-4"></span>
                    </button>

                    <!-- Mobile Menu Toggle -->
                    <button type="button" class="lg:hidden btn btn-ghost btn-square" data-collapse="#navbar-eduKids" aria-controls="navbar-eduKids" aria-label="Toggle navigation">
                        <span class="icon-[tabler--menu-2] size-6"></span>
                    </button>
                </div>

                <!-- Mobile Menu -->
                <div id="navbar-eduKids" class="lg:hidden collapse hidden w-full mt-4 border-t border-gray-100 pt-4">
                    <div class="flex flex-col gap-4">
                        <a href="@Url.Page("/Index")" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 py-2">Home</a>
                        <a href="#about" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 py-2">About Us</a>
                        <a href="#academics" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 py-2">Academics</a>
                        <a href="#admissions" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 py-2">Admissions</a>
                        <a href="#contact" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 py-2">Contact</a>

                        <!-- Mobile Call Section -->
                        <div class="flex items-center gap-3 py-2 border-t border-gray-100 mt-2 pt-4">
                            <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center">
                                <span class="icon-[tabler--phone] text-orange-500 size-4"></span>
                            </div>
                            <div class="text-sm">
                                <div class="text-gray-500">Call Us Now</div>
                                <div class="text-gray-800 font-semibold">+1-555-123-4567</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-orange-50 to-blue-50 overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute inset-0 pointer-events-none">
        <!-- Hot Air Balloon -->
        <div class="absolute top-20 left-10 lg:left-20 text-cyan-400">
            <span class="icon-[tabler--balloon] size-12 lg:size-16"></span>
        </div>

        <!-- Diamond -->
        <div class="absolute top-32 left-1/4 text-orange-400">
            <span class="icon-[tabler--diamond] size-8 lg:size-10"></span>
        </div>

        <!-- Airplane -->
        <div class="absolute bottom-32 left-16 lg:left-32 text-orange-400">
            <span class="icon-[tabler--plane] size-10 lg:size-12"></span>
        </div>

        <!-- Bee -->
        <div class="absolute top-1/2 right-1/4 text-yellow-400">
            <span class="icon-[tabler--bug] size-8 lg:size-10"></span>
        </div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center min-h-[600px] py-16 lg:py-20">

            <!-- Content Section -->
            <div class="space-y-8 text-center lg:text-left">
                <!-- Subtitle -->
                <div class="flex items-center justify-center lg:justify-start gap-2">
                    <span class="icon-[tabler--user-check] text-orange-400 size-5"></span>
                    <span class="text-orange-400 font-medium text-sm lg:text-base tracking-wide">Welcome To EduKids</span>
                </div>

                <!-- Main Headline -->
                <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-gray-800 leading-tight">
                    Trial Nanny Free<br>
                    On <span class="text-orange-400">First Day.</span>
                </h1>

                <!-- Description -->
                <p class="text-gray-600 text-lg lg:text-xl leading-relaxed max-w-md mx-auto lg:mx-0">
                    Suspendisse eget lectus vitae elit malesuada lacinia Vestibulum scelerisque, ligula sit amet consequat
                </p>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                    <button class="bg-orange-400 hover:bg-orange-500 text-white px-8 py-4 rounded-full font-semibold transition-all duration-200 flex items-center justify-center gap-3 shadow-lg hover:shadow-xl">
                        Explore More
                        <span class="icon-[tabler--arrow-right] size-5"></span>
                    </button>

                    <button class="border-2 border-orange-400 text-orange-400 hover:bg-orange-400 hover:text-white px-8 py-4 rounded-full font-semibold transition-all duration-200 flex items-center justify-center gap-3">
                        Get In Touch
                        <span class="icon-[tabler--arrow-right] size-5"></span>
                    </button>
                </div>
            </div>

            <!-- Image Section -->
            <div class="relative">
                <!-- Main Image Container -->
                <div class="relative rounded-3xl overflow-hidden shadow-2xl">
                    <img src="https://images.unsplash.com/photo-1544717297-fa95b6ee9643?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Happy children learning together" class="w-full h-[400px] lg:h-[500px] object-cover">

                    <!-- Overlay for better text contrast if needed -->
                    <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
                </div>

                <!-- Floating Elements around Image -->
                <div class="absolute -top-4 -right-4 w-20 h-20 bg-white rounded-2xl shadow-lg flex items-center justify-center">
                    <span class="icon-[tabler--book] text-orange-400 size-8"></span>
                </div>

                <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-white rounded-xl shadow-lg flex items-center justify-center">
                    <span class="icon-[tabler--palette] text-blue-400 size-6"></span>
                </div>

                <div class="absolute top-1/4 -left-6 w-12 h-12 bg-yellow-400 rounded-full flex items-center justify-center shadow-lg">
                    <span class="icon-[tabler--star] text-white size-6"></span>
                </div>
            </div>

        </div>
    </div>
</section>