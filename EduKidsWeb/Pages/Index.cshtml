@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Navigation Bar -->
<nav class="navbar">
    <div class="mx-auto w-full max-w-7xl px-4 py-4 sm:px-6 lg:flex lg:items-center lg:gap-2 lg:px-8">
        <div class="navbar-start items-center justify-between max-lg:w-full">
            <a class="text-base-content flex items-center gap-3 text-xl font-bold lg:hidden" href="@Url.Page("/Index")">
                <span class="icon-[tabler--school] text-primary size-8"></span>
                EduKids
            </a>

            <div class="flex items-center lg:hidden">
                <span class="icon-[tabler--search] hover:text-primary text-base-content active:text-primary me-6 size-5 cursor-pointer"></span>
                <button type="button" class="collapse-toggle btn btn-outline btn-secondary btn-square" data-collapse="#navbar-eduKids" aria-controls="navbar-eduKids" aria-label="Toggle navigation">
                    <span class="icon-[tabler--menu-2] collapse-open:hidden size-5.5"></span>
                    <span class="icon-[tabler--x] collapse-open:block hidden size-5.5"></span>
                </button>
            </div>
        </div>

        <div id="navbar-eduKids" class="lg:navbar-center transition-height collapse hidden grow overflow-hidden duration-300 lg:flex">
            <div class="text-base-content flex gap-6 text-base font-medium max-lg:mt-4 max-lg:flex-col lg:items-center lg:gap-16">
                <a href="@Url.Page("/Index")" class="hover:text-primary active:text-primary">Home</a>
                <a href="#about" class="hover:text-primary active:text-primary">About</a>
                <a class="text-base-content flex items-center gap-3 text-xl font-bold max-lg:hidden" href="@Url.Page("/Index")">
                    <span class="icon-[tabler--school] text-primary size-8"></span>
                    EduKids
                </a>
                <a href="#academics" class="hover:text-primary active:text-primary">Academics</a>
                <a href="#admissions" class="hover:text-primary active:text-primary">Admissions</a>
                <a href="#contact" class="hover:text-primary active:text-primary">Contact</a>
            </div>
        </div>

        <div class="navbar-end max-lg:hidden">
            <span class="icon-[tabler--search] hover:text-primary active:text-primary text-base-content size-5 cursor-pointer"></span>
        </div>
    </div>
</nav>

<div class="text-center mt-8">
    <h1 class="display-4">Welcome to EduKids</h1>
    <p class="text-lg text-base-content/70 mt-4">Nurturing young minds for a brighter tomorrow</p>
</div>