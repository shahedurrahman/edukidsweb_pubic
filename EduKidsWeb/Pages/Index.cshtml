<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-orange-50 to-blue-50 overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute inset-0 pointer-events-none">
        <!-- Hot Air Balloon -->
