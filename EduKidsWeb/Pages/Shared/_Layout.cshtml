<!DOCTYPE html>
<html lang="en" data-theme="light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduKidsWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EduKidsWeb.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <!-- Navigation Bar -->
        <nav class="navbar bg-white shadow-sm border-b border-gray-100 w-full">
            <div class="w-full">
                <div class="mx-auto max-w-7xl px-4 py-3 sm:px-6 lg:px-8">
                    <div class="flex w-full items-center justify-between">
                        <!-- Logo Section -->
                        <div class="navbar-start">
                            <a class="flex items-center gap-3 text-xl font-bold text-gray-800" href="@Url.Page("/Index")">
                                <div class="w-10 h-10 bg-orange-400 rounded-lg flex items-center justify-center">
                                    <span class="icon-[tabler--school] text-white size-6"></span>
                                </div>
                                <span class="text-gray-800">EduKids</span>
                            </a>
                        </div>

                        <!-- Navigation Menu -->
                        <div class="navbar-center hidden lg:flex">
                            <div class="flex items-center gap-8 text-base font-medium">
                                <a href="@Url.Page("/Index")" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 flex items-center gap-1">
                                    Home
                                    <span class="icon-[tabler--chevron-down] size-4"></span>
                                </a>
                                <a href="#about" class="text-gray-700 hover:text-orange-500 transition-colors duration-200">
                                    About Us
                                </a>
                                <a href="@Url.Page("/Teachers")" class="text-gray-700 hover:text-orange-500 transition-colors duration-200">
                                    Teachers
                                </a>
                                <a href="#academics" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 flex items-center gap-1">
                                    Academics
                                    <span class="icon-[tabler--chevron-down] size-4"></span>
                                </a>
                                <a href="#admissions" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 flex items-center gap-1">
                                    Admissions
                                    <span class="icon-[tabler--chevron-down] size-4"></span>
                                </a>
                                <a href="@Url.Page("/Contact")" class="text-gray-700 hover:text-orange-500 transition-colors duration-200">
                                    Contact
                                </a>
                            </div>
                        </div>

                        <!-- Right Side Actions -->
                        <div class="navbar-end flex items-center gap-4">
                            <!-- Call Us Section -->
                            <div class="hidden lg:flex items-center gap-3">
                                <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center">
                                    <span class="icon-[tabler--phone] text-orange-500 size-5"></span>
                                </div>
                                <div class="text-sm">
                                    <div class="text-gray-500 font-medium">Call Us Now</div>
                                    <div class="text-gray-800 font-semibold">+1-555-123-4567</div>
                                </div>
                            </div>

                            <!-- Mobile Menu Toggle -->
                            <button type="button" class="collapse-toggle btn btn-outline btn-secondary btn-square lg:hidden" data-collapse="#navbar-eduKids" aria-controls="navbar-eduKids" aria-label="Toggle navigation">
                                <span class="icon-[tabler--menu-2] collapse-open:hidden size-5.5"></span>
                                <span class="icon-[tabler--x] collapse-open:block hidden size-5.5"></span>
                            </button>
                        </div>
                    </div>

                    <!-- Mobile Menu -->
                    <div id="navbar-eduKids" class="collapse hidden w-full overflow-hidden transition-[height] duration-300 lg:hidden">
                        <div class="flex flex-col gap-4 mt-4 border-t border-gray-100 pt-4">
                            <a href="@Url.Page("/Index")" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 py-2">Home</a>
                            <a href="#about" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 py-2">About Us</a>
                            <a href="@Url.Page("/Teachers")" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 py-2">Teachers</a>
                            <a href="#academics" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 py-2">Academics</a>
                            <a href="#admissions" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 py-2">Admissions</a>
                            <a href="@Url.Page("/Contact")" class="text-gray-700 hover:text-orange-500 transition-colors duration-200 py-2">Contact</a>

                            <!-- Mobile Call Section -->
                            <div class="flex items-center gap-3 py-2 border-t border-gray-100 mt-2 pt-4">
                                <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center">
                                    <span class="icon-[tabler--phone] text-orange-500 size-4"></span>
                                </div>
                                <div class="text-sm">
                                    <div class="text-gray-500">Call Us Now</div>
                                    <div class="text-gray-800 font-semibold">+1-555-123-4567</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer class="bg-orange-50 py-16">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">

                <!-- Logo and Newsletter Section -->
                <div class="lg:col-span-1">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="w-10 h-10 bg-orange-400 rounded-lg flex items-center justify-center">
                            <span class="icon-[tabler--school] text-white size-6"></span>
                        </div>
                        <span class="text-xl font-bold text-gray-800">EduKids</span>
                    </div>

                    <p class="text-gray-600 mb-6 text-sm leading-relaxed">
                        Sign up to searing weekly newsletter to get the latest updates.
                    </p>

                    <!-- Newsletter Signup -->
                    <div class="flex mb-6">
                        <input type="email" placeholder="Enter Email Address" class="flex-1 px-4 py-3 border border-gray-200 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-orange-400 focus:border-transparent text-sm">
                        <button class="bg-orange-400 hover:bg-orange-500 text-white px-4 py-3 rounded-r-lg transition-colors duration-200">
                            <span class="icon-[tabler--send] size-5"></span>
                        </button>
                    </div>

                    <!-- Social Media Icons -->
                    <div class="flex gap-3">
                        <a href="#" class="w-9 h-9 bg-white border border-gray-200 rounded-lg flex items-center justify-center hover:bg-orange-400 hover:text-white hover:border-orange-400 transition-all duration-200">
                            <span class="icon-[tabler--brand-facebook] size-4"></span>
                        </a>
                        <a href="#" class="w-9 h-9 bg-white border border-gray-200 rounded-lg flex items-center justify-center hover:bg-orange-400 hover:text-white hover:border-orange-400 transition-all duration-200">
                            <span class="icon-[tabler--brand-twitter] size-4"></span>
                        </a>
                        <a href="#" class="w-9 h-9 bg-white border border-gray-200 rounded-lg flex items-center justify-center hover:bg-orange-400 hover:text-white hover:border-orange-400 transition-all duration-200">
                            <span class="icon-[tabler--brand-linkedin] size-4"></span>
                        </a>
                        <a href="#" class="w-9 h-9 bg-white border border-gray-200 rounded-lg flex items-center justify-center hover:bg-orange-400 hover:text-white hover:border-orange-400 transition-all duration-200">
                            <span class="icon-[tabler--brand-youtube] size-4"></span>
                        </a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="lg:col-span-1">
                    <h3 class="text-lg font-semibold text-gray-800 mb-6 relative">
                        Quick Links
                        <div class="absolute bottom-0 left-0 w-12 h-0.5 bg-orange-400 transform translate-y-3"></div>
                    </h3>
                    <ul class="space-y-3">
                        <li>
                            <a href="#" class="text-gray-600 hover:text-orange-500 transition-colors duration-200 flex items-center gap-2 text-sm">
                                <span class="icon-[tabler--chevron-right] size-4"></span>
                                Our Services
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-600 hover:text-orange-500 transition-colors duration-200 flex items-center gap-2 text-sm">
                                <span class="icon-[tabler--chevron-right] size-4"></span>
                                Our Blogs
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-600 hover:text-orange-500 transition-colors duration-200 flex items-center gap-2 text-sm">
                                <span class="icon-[tabler--chevron-right] size-4"></span>
                                FAQ'S
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Page("/Contact")" class="text-gray-600 hover:text-orange-500 transition-colors duration-200 flex items-center gap-2 text-sm">
                                <span class="icon-[tabler--chevron-right] size-4"></span>
                                Contact Us
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Categories -->
                <div class="lg:col-span-1">
                    <h3 class="text-lg font-semibold text-gray-800 mb-6 relative">
                        Categories
                        <div class="absolute bottom-0 left-0 w-12 h-0.5 bg-orange-400 transform translate-y-3"></div>
                    </h3>
                    <ul class="space-y-3">
                        <li>
                            <a href="#" class="text-gray-600 hover:text-orange-500 transition-colors duration-200 flex items-center gap-2 text-sm">
                                <span class="icon-[tabler--chevron-right] size-4"></span>
                                Music Learning
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-600 hover:text-orange-500 transition-colors duration-200 flex items-center gap-2 text-sm">
                                <span class="icon-[tabler--chevron-right] size-4"></span>
                                Sports, Games
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-600 hover:text-orange-500 transition-colors duration-200 flex items-center gap-2 text-sm">
                                <span class="icon-[tabler--chevron-right] size-4"></span>
                                Science Class
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-600 hover:text-orange-500 transition-colors duration-200 flex items-center gap-2 text-sm">
                                <span class="icon-[tabler--chevron-right] size-4"></span>
                                Drawing
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Contact Us -->
                <div class="lg:col-span-1">
                    <h3 class="text-lg font-semibold text-gray-800 mb-6 relative">
                        Contact Us
                        <div class="absolute bottom-0 left-0 w-12 h-0.5 bg-orange-400 transform translate-y-3"></div>
                    </h3>
                    <div class="space-y-4">
                        <!-- Address -->
                        <div class="flex items-start gap-3">
                            <div class="w-5 h-5 bg-orange-100 rounded-full flex items-center justify-center mt-0.5 flex-shrink-0">
                                <span class="icon-[tabler--map-pin] text-orange-500 size-3"></span>
                            </div>
                            <p class="text-gray-600 text-sm">6391 Elgin St. Celina, USA</p>
                        </div>

                        <!-- Phone -->
                        <div class="flex items-center gap-3">
                            <div class="w-5 h-5 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0">
                                <span class="icon-[tabler--phone] text-orange-500 size-3"></span>
                            </div>
                            <p class="text-gray-600 text-sm">+208-666-0112</p>
                        </div>

                        <!-- Email -->
                        <div class="flex items-center gap-3">
                            <div class="w-5 h-5 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0">
                                <span class="icon-[tabler--mail] text-orange-500 size-3"></span>
                            </div>
                            <p class="text-gray-600 text-sm">info@example.com</p>
                        </div>

                        <!-- Contact Button -->
                        <div class="pt-4">
                            <a href="@Url.Page("/Contact")" class="bg-orange-400 hover:bg-orange-500 text-white px-6 py-3 rounded-full font-medium transition-colors duration-200 flex items-center gap-2 text-sm">
                                Contact Us
                                <span class="icon-[tabler--arrow-right] size-4"></span>
                            </a>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Copyright -->
            <div class="border-t border-gray-200 mt-12 pt-8">
                <div class="text-center text-gray-500 text-sm">
                    &copy; 2025 EduKids. All rights reserved. | <a href="#" class="hover:text-orange-500 transition-colors duration-200">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/flyonui/flyonui.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>